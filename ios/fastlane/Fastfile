# Fastlane configuration for ephenotes iOS
# Documentation: https://docs.fastlane.tools

default_platform(:ios)

platform :ios do
  desc "Build iOS app"
  lane :build do
    build_app(
      workspace: "ios/Runner.xcworkspace",
      scheme: "Runner",
      export_method: "app-store",
      output_directory: "build/ios",
      output_name: "Runner.ipa"
    )
  end

  desc "Upload to TestFlight"
  lane :beta do
    # Use App Store Connect API Key for authentication
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true
    )

    upload_to_testflight(
      api_key: api_key,
      ipa: "build/ios/Runner.ipa",
      skip_waiting_for_build_processing: true
    )
  end

  desc "Upload to App Store"
  lane :release do
    # Use App Store Connect API Key for authentication
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true
    )

    upload_to_app_store(
      api_key: api_key,
      ipa: "build/ios/Runner.ipa",
      skip_metadata: false,
      skip_screenshots: false,
      submit_for_review: false,
      automatic_release: false
    )
  end

  desc "Build and upload to TestFlight"
  lane :deploy_beta do
    build
    beta
  end

  desc "Build and upload to App Store"
  lane :deploy_release do
    build
    release
  end

  desc "Download metadata from App Store Connect"
  lane :download_metadata do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true
    )

    download_from_app_store(
      api_key: api_key,
      app_identifier: "com.ephenotes.app"
    )
  end

  desc "Upload metadata to App Store Connect"
  lane :upload_metadata do
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true
    )

    upload_to_app_store(
      api_key: api_key,
      skip_binary_upload: true,
      skip_screenshots: false,
      skip_metadata: false
    )
  end
end
